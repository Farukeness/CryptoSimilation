<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="5dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="161dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="2dp"
        android:background="@drawable/recycler_view_rounded">

        <TextView
            android:id="@+id/coinName2"

            android:layout_width="120dp"
            android:layout_height="29dp"
            android:text="CoinName"
            android:textColor="@color/white"

            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.23"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/coinName"
            app:layout_constraintVertical_bias="0.0"></TextView>

        <TextView
            android:id="@+id/bakiyeView"
            android:layout_width="121dp"
            android:layout_height="27dp"
            android:layout_marginStart="28dp"
            android:layout_marginBottom="15dp"

            android:text="Coin Adet"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"></TextView>

        <TextView
            android:id="@+id/bakiyeView2"
            android:layout_width="113dp"
            android:layout_height="12dp"
            android:layout_marginStart="28dp"
            android:layout_marginBottom="48dp"

            android:text="Mevcut Adet"
            android:textColor="@color/white"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"></TextView>


        <TextView
            android:id="@+id/bakiyeView3"
            android:layout_width="98dp"
            android:layout_height="12dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="60dp"

            android:text="Güncel Fiyat/Maliyet"
            android:textColor="@color/white"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"></TextView>

        <TextView
            android:id="@+id/currentPrice"
            android:layout_width="116dp"
            android:layout_height="17dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="32dp"

            android:text="Güncel Fiyat"
            android:textColor="@color/white"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"></TextView>

        <TextView
            android:id="@+id/cost"
            android:layout_width="116dp"
            android:layout_height="17dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="15dp"

            android:text="Maliyet"
            android:textColor="@color/white"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"></TextView>

        <TextView
            android:id="@+id/coinPrice"
            android:layout_width="106dp"
            android:layout_height="39dp"
            android:layout_marginEnd="16dp"
            android:text="Coin Güncel Fiyat"
            android:textColor="@color/white"
            android:textSize="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.254" />

        <TextView
            android:id="@+id/coinName"

            android:layout_width="153dp"
            android:layout_height="38dp"
            android:layout_marginStart="68dp"
            android:text="Currency"

            android:textColor="@color/white"
            android:textSize="25sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/coinPrice"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.146"></TextView>

        <androidx.cardview.widget.CardView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            app:cardCornerRadius="250dp"
            app:layout_constraintBottom_toTopOf="@+id/bakiyeView2"
            app:layout_constraintEnd_toStartOf="@+id/coinName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/coinImage"
                android:layout_width="40dp"
                android:layout_height="40dp"

                app:srcCompat="@drawable/tether" />
        </androidx.cardview.widget.CardView>






    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>